#######################
#                     #
#    bspwm hotkeys    #
#                     #
#######################

#
# Global
#________

### Quit bspwm
super + alt + Escape
   pkill -x panel ; bspc quit

### Close window
# Close focused
super + w
    bspc window -c
# Close all windows belonging to the same class and on the same desktop
super + q
    xdo close -cd

### make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

### Toggle visibility
super + z
    bspc control --toggle-visibility

### Blank window
super + shift + z
    blank_window

#
# Mouse controls
#________________

### Mouse preselection and mygtkmenu
super + @button3
    MouseLaunch

### bspwm controls menu
super + @button2
    mygtkmenu ~/.config/GTKmenu/BspwmMenu

### Center mouse in the active window
super + c
    MouseCenter

#
# Active window
#_______________

super + {h,j,k,l}
    bspc window -f {left,down,up,right}

super + {Left,Down,Up,Right}
    bspc window -f {left,down,up,right}

super + {o,i}
    bspc control --record-history off; \
    bspc window {older,newer} -f; \
    bspc control --record-history on

super + grave
    bspc window -f last

~button1
    bspc pointer -g focus

### Next/prev window
super + {_,mod5 + }{n,b}
    bspc window -f {next,prev}.{tiling,floating}


#
# Move windows
#______________

super + shift + {h,j,k,l}
    bspc window -s {left,down,up,right}

super + mod5 + {Left,Down,Up,Right}
    bspc window -s {left,down,up,right}

super + r
    bspc window -s last

super + {comma,semicolon}
    bspc desktop -C {backward,forward}

super + y
    bspc window -w last.manual

super + m
    bspc window -s biggest

### Move to last manual split
super + shift + m
    bspc window -w last.manual

### Flip the tree
super + equal
    bspc desktop -F vertical

super + colon
    bspc desktop -F horizontal

### Rotate the tree
super + shift + {ugrave,dead_grave}
    bspc desktop -R {90,-90}

#
# Presel
#________

# Send the presel signal
super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

super + shift + {Left,Down,Up,Right}
    bspc window -p {left,down,up,right}

### Cancel the presel
super + ctrl + space
    bspc desktop -c

### Change the split ratio of the selected window
super + ctrl + {ampersand,eacute,quotedbl,apostrophe,parenleft,section,egrave,exclam,ccedilla}
    bspc window -r 0.{1-9}


#
# Window state
#______________

### Monocle
super + t
    bspc desktop -l next

### Window state
super + {shift+s,s,f,x,X,shift+p}
    bspc window -t {pseudo_tiled,floating,fullscreen,locked,sticky,private}

#
#
# Resize windows
#________________

### Agrandir
#mod5 + {h,j,k,l}
#    bspc window -e {left -10,down +10,up -10,right +10}

mod5 + h
    bspc window -e left -10 || bspc window -e right -10

mod5 + j
    bspc window -e down +10 || bspc window -e up +10

mod5 + k
    bspc window -e up -10 || bspc window -e down -10

mod5 + l
    bspc window -e right +10 || bspc window -e left +10

### Rétrécir
super + mod5 + {h,j,k,l}
    bspc window -e {right -10,up +10,down -10,left +10}

### Balance/equalize windows
super + shift + e
    bspc desktop -B

super + e
    bspc desktop -E

### Mouse
super + alt + button1
    bspc pointer -g resize_corner

super + ctrl + button1
    bspc pointer -g resize_side

super + button1
    bspc pointer -g move

super +{_,ctrl,alt +} !button{1-3}
    bspc pointer -t %i %i

super +{_,ctrl,alt +} @button{1-3}
    bspc pointer -u


#
# Change desktop
#________________

### Change desktop, send window to desktop
super + {_,shift + }{ampersand,eacute,quotedbl,apostrophe,parenleft,section,egrave,exclam,ccedilla,agrave}
    bspc {desktop -f,window -d} ^{1-9,10}

super + {_,shift + }{1-9,0}
   bspc {desktop -f,window -d} ^{1-9,10}

### Next/Previous desktop
super + bracket{left,right}
    bspc desktop -f {prev,next}

### Last desktop
super + Tab
    bspc desktop -f last

### Add or remove desktop
super + shift + colon
    bspc-script desktop-less

super + shift + equal
    bspc-script desktop-plus


#
# Misc
#__________

### Window gap
super + g
    bspc config -m focused window_gap {0,6}

#
# Touchpad "gestures"
#_____________________

### Three finger swipe (left or right) to change desktop
@button{10,11}
    bspc desktop -f {prev,next}

### Three finger swipe (up) to launch dswitcher
@button8
    dswitcher & xdotool mousemove 640 400


###################################
#                                 #
#  Keybinds not related to bspwm  #
#                                 #
###################################

super + Return
    termite

super + ugrave
    termite -e ranger

XF86LaunchA
    run-or-raise firefox

super + XF86LaunchA
    run-or-raise thunar

super + XF86LaunchB
    run-or-raise nitrogen

super + p
    dmenu_run -i -x 415 -y 330 -w 450 -h 20 -l 4 -fn 'Lucida Grande 8' -nb '#201F1D' -nf '#eddec9' -sb '#8F3724' -sf '#eddec9'

XF86LaunchB
#    scrot ; mpv -vo null /usr/share/sounds/freedesktop/stereo/camera-shutter.oga & dzen-notify "^fg(#878438)Scrot^fg() !" 200 2
    scrot ; notify-send "Scrot!" "Screenshot taken."

super + mod5 + z
    run-or-raise plank

super + XF86MonBrightnessDown
    run-or-raise transmission

### dswitcher
alt + Tab
    dswitcher

#
# VOLUME
#________

### Mute
XF86AudioMute
 amixer set Master toggle ; pkill not-stat ; not-stat Mt

### pavucontrol
super + XF86AudioMute
 pavucontrol

### Volume
#XF86AudioRaiseVolume
# amixer set PCM 1%+ ; pkill not-stat ; not-stat Vp
#
#XF86AudioLowerVolume
# amixer set PCM 1%- ; pkill not-stat ; not-stat Vp

### Master Volume
XF86AudioRaiseVolume
 amixer set Master 5%+ ; pkill not-stat ; not-stat Vm

super + XF86AudioRaiseVolume
 amixer set Master 1%+ ; pkill not-stat ; not-stat Vm

XF86AudioLowerVolume
 amixer set Master 5%- ; pkill not-stat ; not-stat Vm

super + XF86AudioLowerVolume
 amixer set Master 1%- ; pkill not-stat ; not-stat Vm


#
# MPD/NCMPCPP
#_____________

### Toggle
XF86AudioPlay
 mpc toggle

### Ouvrir ncmpcpp
super + XF86AudioPlay
 termite -e ncmpcpp

### Infos musique
super + XF86AudioNext
 pkill not-stat ; not-stat Mu

### Coverart-meh
mod5 + XF86AudioPlay
 run-or-raise coverart

### dmenu mpd controls
mod5 + XF86AudioNext
 dmenu_mpc

### Suivant
XF86AudioNext
 mpc next

### Previous song if song just began, else replay the begining of the song
XF86AudioPrev
 mpc-script prev


