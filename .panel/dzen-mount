#!/bin/bash

#. panel-settings

#
# Close and clean if a dzen submenu is already opened
#

cleaning ()
{
	pkill -f "dzen2 -p -m -x -408 -y 18 -w 408 -h 20"
	pkill -f 'tail -f /tmp/dzen-mount-fifo'
	panel-torrents full
}
clean_tail="pkill -f 'tail -f /tmp/dzen-mount-fifo'"
pgrep -f "dzen2 -p -m -x -408 -y 18 -w 408 -h 20" > /dev/null && $(cleaning) && exit


#
# Make the submenu window
#

# INFO
mountlist=$(lsblk -l -o "MOUNTPOINT" | grep "/media")
lines=$(echo "$mountlist" | wc -l)

# FIFO
[ -e "/tmp/dzen-mount-fifo" ] && rm "/tmp/dzen-mount-fifo"
mkfifo "/tmp/dzen-mount-fifo"

# TITLE
title="^fg(#878438)Mounted drive^fg() list:"

# CREATE THE POPUP
(echo "$title"
exec tail -f /tmp/dzen-mount-fifo) | dzen2 -p -m -x -408 -y 18 -w 408 -h 20 -fn 'MonteCarlo-8' -fg '#DED0B4' -bg '#1A1917' -l $lines -e "onstart=uncollapse;button1=menuprint,exit,exec:$clean_tail;button3=exit,exec:$clean_tail;button4=scrollup;button5=scrolldown" | while read FNAME; do
	case $FNAME in
	"Rien n'est mont√© !")
		break
		;;
	*)
		FNAME=${FNAME:4}
		xdg-open "$FNAME" &
		;;
	esac
done &

# CREATE CONTENT FOR THE POPUP
dzen-mount-content $lines
