            exit
        ;;
        P) # PACMAN 2 by: pfh
cat << EOF

 $f3  ▄███████▄$rst   $f1  ▄██████▄$rst    $f2  ▄██████▄$rst    $f4  ▄██████▄$rst    $f5  ▄██████▄$rst    $f6  ▄██████▄$rst
