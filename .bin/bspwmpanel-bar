#! /bin/sh
while read -r line ; do
    case $line in
        S*)
            # clock output
            horloge="\\br\\fr${line#?}\\fr"
            ;;
	m*)
	    # music and notifications
            musique="\br\fr${line#?}\\fr"
            ;;
	M*)
	    # mails
            mails="\br\fr${line#?}\\fr"
            ;;
        W*)
            # bspwm internal state
            wm_infos=""
            IFS=':'
            set -- ${line#?}
            while [ $# -gt 0 ] ; do
                item=$1
                name=${item#?}
                case $item in
                    O*)
                        # focused occupied desktop
                        wm_infos="$wm_infos \\f9 "
                        ;;
                    F*)
                        # focused free desktop
                        wm_infos="$wm_infos \\f9 "
                        ;;
                    U*)
                        # focused urgent desktop
                        wm_infos="$wm_infos\\b4\\u4 \\f9 \\b1\\u1"
                        ;;
                    o*)
                        # occupied desktop
                        wm_infos="$wm_infos \\f9 "
                        ;;
                    f*)
                        # free desktop
                        wm_infos="$wm_infos \\f9 "
                        ;;
                    u*)
                        # urgent desktop
                        wm_infos="$wm_infos\\b4\\u4 \\f9 \\b1\\u1"
                        ;;
                    L*)
                        # layout
			layout=$(printf "%s" "$(echo ${name} |sed 's/tiled/\\fr/g' |sed 's/monocle/\\f5\\b0\\u1 M \\br\\ur/g')")
                        wm_infos="\\b1\\u1 $wm_infos \\fr\\br\\ur"
                        ;;
                esac
                shift
            done
            ;;
    esac
    printf "%s\n" "\\l$wm_infos$musique $layout \\r $mails$horloge"
done
