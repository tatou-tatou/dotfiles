#! /bin/sh

. panel-settings

while read -r line ; do
    case $line in
        S*)
            # clock output
            horloge="${line#?}"
            ;;
	c*)
            # config
            config="${line#?}"
            ;;
	m*)
            # music and notifications
            musique="${line#?}"
            ;;
	M*)
            # mails
            mails="${line#?}"
            ;;
        W*)
            # bspwm internal state
            wm_infos=""
            IFS=':'
            set -- ${line#?}
            while [ $# -gt 0 ] ; do
                item=$1
                name=${item#?}
                case $item in
                    O*)
                        # focused occupied desktop
                        wm_infos="$wm_infos$occupied_focus"
                        ;;
                    F*)
                        # focused free desktop
                        wm_infos="$wm_infos$empty_focus"
                        ;;
                    U*)
                        # focused urgent desktop
                        wm_infos="$wm_infos%{B$bg_urgenttags}%{F$fg_urgenttags}$occupied_focus%{B$bg_tags}%{F$fg_tags}"
                        ;;
                    o*)
                        # occupied desktop
                        wm_infos="$wm_infos$occupied"
                        ;;
                    f*)
                        # free desktop
                        wm_infos="$wm_infos$empty"
                        ;;
                    u*)
                        # urgent desktop
                        wm_infos="$wm_infos%{B$bg_urgenttags}%{F$fg_urgenttags}$occupied%{B$bg_tags}%{F$fg_tags}"
                        ;;
                    L*)
                        # layout
			layout="%{B$bg_monocle}%{F$fg_monocle}$(printf "%s" "$(echo ${name} |sed 's/tiled//g' |sed 's/monocle/%{A:bspc desktop -l next:}  Monocle %{A}/g')")%{B-}%{F-}"
                        wm_infos="%{B$bg_tags}%{F$fg_tags} $wm_infos %{B-}%{F-}"
                        ;;
                esac
                shift
            done
            ;;
    esac
    printf "%s\n" "%{A:mygtkmenu ~/.config/GTKmenu/StartMenu > /dev/null 2>&1:}$wm_infos%{A}$config$musique $layout %{r} $mails%{A:dzen-date:}$horloge%{A}"
done
