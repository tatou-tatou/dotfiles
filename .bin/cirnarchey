#!/bin/bash

Couleurinfo=[37m
Couleurtext=[36m

## Uptime
			uptime=$(</proc/uptime)
			uptime=${uptime//.*}

	if [[ -n ${uptime} ]]; then
		secs=$((${uptime}%60))
		mins=$((${uptime}/60%60))
		hours=$((${uptime}/3600%24))
		days=$((${uptime}/86400))
		uptime="${mins}"
		if [ "${hours}" -ne "0" ]; then
			uptime="${hours}h ${uptime}m"
		fi
		if [ "${days}" == "1" ]; then
			uptime="${days} day, ${uptime}"
		fi
		if [ "${days}" > "1" ]; then
		   	uptime="${days} days, ${uptime}"
		fi
	fi



## MÃ©moire
	hw_mem=0
	free_mem=0
	human=1024

	mem_info=$(</proc/meminfo)
		mem_info=$(echo $(echo $(mem_info=${mem_info// /}; echo ${mem_info//kB/})))
		for m in $mem_info; do
			if [[ ${m//:*} = MemTotal ]]; then
				memtotal=${m//*:}
			fi

			if [[ ${m//:*} = MemFree ]]; then
				memfree=${m//*:}
			fi

			if [[ ${m//:*} = Buffers ]]; then
				membuffer=${m//*:}
			fi

			if [[ ${m//:*} = Cached ]]; then
				memcached=${m//*:}
			fi
		done

		usedmem="$(((($memtotal - $memfree) - $membuffer - $memcached) / $human))"
		totalmem="$(($memtotal / $human))"

	mem="${usedmem}MB / ${totalmem}MB"
	[[ "$verbosity" -eq "1" ]] && verboseOut "Finding current RAM usage...found as '$mem'"


cat << EOF

   [30m      â–ˆâ–ˆ         â–ˆâ–ˆ
   [30m     â–ˆ[34mâ–ˆâ–ˆ[30mâ–ˆâ–ˆ     â–ˆâ–ˆ[34mâ–ˆâ–ˆ[30mâ–ˆ
   [30m    â–ˆ[34mâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ[30mâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ[34mâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ[30mâ–ˆ
   [30m   â–ˆ[34mâ–ˆâ–ˆâ–ˆâ–ˆ[30mâ–ˆâ–ˆ[36mâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ[30mâ–ˆâ–ˆ[34mâ–ˆâ–ˆâ–ˆâ–ˆ[30mâ–ˆ
   [30m   â–ˆ[34mâ–ˆâ–ˆâ–ˆ[30mâ–ˆ[36mâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ[30mâ–ˆ[34mâ–ˆâ–ˆâ–ˆ[30mâ–ˆ
   [30m   â–ˆ[34mâ–ˆâ–ˆ[30mâ–ˆ[36mâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ[30mâ–ˆ[34mâ–ˆâ–ˆ[30mâ–ˆ         ${Couleurtext}User: $Couleurinfo${USER}
   [30m   â–ˆ[34mâ–ˆâ–ˆ[30mâ–ˆ[36mâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ[30mâ–ˆ[34mâ–ˆâ–ˆ[30mâ–ˆ         ${Couleurtext}Hostname: $Couleurinfo${HOSTNAME}
   [30m   â–ˆ[34mâ–ˆ[30mâ–ˆ[36mâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ[30mâ–ˆ[34mâ–ˆ[30mâ–ˆ         ${Couleurtext}Distro: ${Couleurinfo}CirnOS
   [30m   â–ˆ[34mâ–ˆ[30mâ–ˆ[36mâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ[30mâ–ˆ[34mâ–ˆ[30mâ–ˆ         ${Couleurtext}Kernel: $Couleurinfo$(uname -srm| sed "s/ARCH/cirno/g")
   [30m    â–ˆâ–ˆ[36mâ–ˆâ–ˆ[30mâ–ˆâ–ˆ[36mâ–ˆâ–ˆâ–ˆ[30mâ–ˆ[36mâ–ˆâ–ˆ[30mâ–ˆ[36mâ–ˆâ–ˆ[30mâ–ˆâ–ˆ          ${Couleurtext}Window Manager: [37mbspwm
   [30m  â–ˆâ–ˆ[34mâ–ˆ[30mâ–ˆ[36mâ–ˆâ–ˆ[30mâ–ˆ[37mâ–ˆ[30mâ–ˆ[36mâ–ˆ[30mâ–ˆ[37mâ–ˆ[30mâ–ˆ[36mâ–ˆ[30mâ–ˆâ–ˆ[36mâ–ˆ[30mâ–ˆ[34mâ–ˆ[30mâ–ˆâ–ˆ        ${Couleurtext}Desktop Environment: ${Couleurinfo}
   [30m â–ˆ[34mâ–ˆâ–ˆâ–ˆ[30mâ–ˆ[36mâ–ˆ[30mâ–ˆ[37mâ–ˆâ–ˆâ–ˆ[30mâ–ˆ[37mâ–ˆâ–ˆâ–ˆ[30mâ–ˆ[37mâ–ˆ[30mâ–ˆ[36mâ–ˆ[30mâ–ˆ[34mâ–ˆâ–ˆâ–ˆ[30mâ–ˆ       ${Couleurtext}Shell: $Couleurinfo$(echo $SHELL)
   [30m  â–ˆ[34mâ–ˆâ–ˆ[30mâ–ˆ[36mâ–ˆ[30mâ–ˆ[37mâ–ˆâ–ˆ[30mâ–ˆ[37mâ–ˆâ–ˆâ–ˆ[30mâ–ˆ[37mâ–ˆâ–ˆ[30mâ–ˆ[36mâ–ˆ[30mâ–ˆ[34mâ–ˆâ–ˆ[30mâ–ˆ        ${Couleurtext}Terminal: ${Couleurinfo}$(echo $TERM)
   [30m   â–ˆ[34mâ–ˆ[30mâ–ˆ[36mâ–ˆ[30mâ–ˆ[37mâ–ˆâ–ˆ[30mâ–ˆ[37mâ–ˆâ–ˆâ–ˆ[30mâ–ˆ[37mâ–ˆâ–ˆ[30mâ–ˆ[36mâ–ˆ[30mâ–ˆ[34mâ–ˆ[30mâ–ˆ         ${Couleurtext}
   [30m    â–ˆâ–ˆ[36mâ–ˆâ–ˆ[30mâ–ˆ[37mâ–ˆ[30mâ–ˆ[37mâ–ˆâ–ˆâ–ˆ[30mâ–ˆ[37mâ–ˆ[30mâ–ˆ[36mâ–ˆâ–ˆ[30mâ–ˆâ–ˆ          ${Couleurtext}Packages: $Couleurinfo$(pacman -Qq | wc -l)
   [30m      â–ˆ[36mâ–ˆ[30mâ–ˆâ–ˆ[37mâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ[30mâ–ˆâ–ˆ[36mâ–ˆ[30mâ–ˆ            ${Couleurtext}Uptime: $Couleurinfo$uptime
